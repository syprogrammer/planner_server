// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  moduleFormat    = "cjs" // Required for NestJS (CommonJS)
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  // URL is now configured in prisma.config.ts for Prisma 7+
}

// ============= ORGANIZATION & USERS =============

model Organization {
  id        String   @id @default(cuid())
  clerkOrgId String  @unique // Clerk Organization ID
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projects  Project[]
  members   OrganizationMember[]
}

model OrganizationMember {
  id             String   @id @default(cuid())
  clerkUserId    String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           Role     @default(MEMBER)
  createdAt      DateTime @default(now())

  @@unique([clerkUserId, organizationId])
}

enum Role {
  ADMIN
  MEMBER
  CLIENT
}

// ============= PROJECTS =============

model Project {
  id             String   @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  clientOrgId    String?  // Client's Clerk Org ID for read-only access
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  apps           App[]
  members        ProjectMember[]
  activityLogs   ActivityLog[]
  userVisits     UserVisit[]
  userStarred    UserStarred[]
}

model ProjectMember {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  clerkUserId String
  name        String
  role        Role     @default(MEMBER)
  createdAt   DateTime @default(now())

  @@unique([projectId, clerkUserId])
}

// ============= APPS =============

model App {
  id        String   @id @default(cuid())
  name      String
  type      AppType
  icon      String?  // Custom icon name
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  modules   Module[]
  bugSheets BugSheet[]
}

enum AppType {
  WEBSITE
  MOBILE
  API
  BUG_TRACKING
  CUSTOM
}

// ============= MODULES/PAGES =============

model Module {
  id        String   @id @default(cuid())
  name      String
  appId     String
  app       App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

// ============= TASKS =============

model Task {
  id           String     @id @default(cuid())
  title        String
  description  String?
  type         TaskType   @default(FEATURE)
  priority     Priority   @default(MEDIUM)
  status       Status     @default(TODO)
  
  // Assignment
  assignedTo   String?
  remarks      String?
  
  // Dates
  startDate    DateTime?
  endDate      DateTime?
  
  // Parent-child relation for subtasks
  parentId     String?
  parent       Task?      @relation("Subtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks     Task[]     @relation("Subtasks")
  
  // Relations
  moduleId     String
  module       Module     @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  comments     Comment[]
  
  order        Int        @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

enum TaskType {
  FEATURE
  BUG
  IMPROVEMENT
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Status {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

// ============= BUGSHEET =============

model BugSheet {
  id          String   @id @default(cuid())
  module      String   // Module/page name
  description String   // Bug description
  status      Status   @default(TODO)
  priority    Priority @default(MEDIUM) // Added priority
  assignedTo  String?
  remarks     String?
  
  appId       String
  app         App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  comments    Comment[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// ============= COMMENTS =============

model Comment {
  id         String    @id @default(cuid())
  content    String
  authorId   String    // Clerk User ID
  authorName String
  
  // Polymorphic relation - Task OR BugSheet
  taskId     String?
  task       Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  bugSheetId String?
  bugSheet   BugSheet? @relation(fields: [bugSheetId], references: [id], onDelete: Cascade)
  
  createdAt  DateTime  @default(now())
}

// ============= ACTIVITY LOG =============

model ActivityLog {
  id          String         @id @default(cuid())
  
  // What happened
  action      ActivityAction
  field       String?        // Field that was changed (e.g., "status", "assignee")
  oldValue    String?        // Previous value
  newValue    String?        // New value
  
  // Who did it
  userId      String         // Clerk User ID
  userName    String         // User display name
  
  // What entity was affected
  entityType  EntityType
  entityId    String         // Task ID or BugSheet ID
  entityTitle String         // Task/Bug title for display
  
  // Context
  projectId   String
  project     Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime       @default(now())
  
  @@index([projectId, createdAt])
  @@index([entityType, entityId])
  @@index([userId])
}

enum ActivityAction {
  CREATED
  UPDATED
  DELETED
  STATUS_CHANGED
  ASSIGNED
  UNASSIGNED
  COMMENTED
  PRIORITY_CHANGED
}

enum EntityType {
  TASK
  BUGSHEET
  PROJECT
  MODULE
}

// ============= USER VISITS =============

model UserVisit {
  id          String   @id @default(cuid())
  userId      String   // Clerk User ID
  
  // What was visited
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectName String   // Denormalized for quick display
  appId       String?
  appName     String?  // Denormalized for quick display
  viewType    String?  // 'list', 'board', 'summary', 'bugsheet'
  
  visitedAt   DateTime @default(now())
  
  @@index([userId, visitedAt])
  @@index([projectId])
}

// ============= USER STARRED =============

model UserStarred {
  id        String   @id @default(cuid())
  userId    String   // Clerk User ID
  
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectName String // Denormalized
  appId     String?
  appName   String?  // Denormalized
  
  createdAt DateTime @default(now())
  
  @@unique([userId, projectId, appId])
  @@index([userId])
}

