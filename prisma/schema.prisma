// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  moduleFormat    = "cjs" // Required for NestJS (CommonJS)
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============= ORGANIZATION & USERS =============

model Organization {
  id         String               @id @default(cuid())
  clerkOrgId String               @unique // Clerk Organization ID
  name       String
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt
  projects   Project[]
  members    OrganizationMember[]
}

model OrganizationMember {
  id             String       @id @default(cuid())
  clerkUserId    String
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  role           Role         @default(MEMBER)
  createdAt      DateTime     @default(now())

  @@unique([clerkUserId, organizationId])
}

enum Role {
  ADMIN
  MEMBER
  VIEWER
}

// ============= PROJECTS =============

model Project {
  id             String       @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  clientOrgId    String? // Client's Clerk Org ID for read-only access
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  createdBy   String? // Clerk User ID
  creatorName String?

  apps         App[]
  members      ProjectMember[]
  activityLogs ActivityLog[]
  userVisits   UserVisit[]
  userStarred  UserStarred[]
}

model ProjectMember {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  clerkUserId String
  name        String
  role        Role     @default(MEMBER)
  createdAt   DateTime @default(now())

  @@unique([projectId, clerkUserId])
}

// ============= APPS =============

model App {
  id        String   @id @default(cuid())
  name      String
  type      AppType
  icon      String? // Custom icon name
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   String?
  creatorName String?

  modules   Module[]
  bugSheets BugSheet[]
}

enum AppType {
  WEBSITE
  MOBILE
  API
  BUG_TRACKING
  CUSTOM
}

// ============= MODULES/PAGES =============

model Module {
  id          String   @id @default(cuid())
  name        String
  appId       String
  app         App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  order       Int      @default(0)
  taskCounter Int      @default(0) // Tracks the next task number for generating taskCodes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
}

// ============= TASKS =============

model Task {
  id          String   @id @default(cuid())
  taskCode    String? // Persistent task code like "HOM-1" or "HOM-1.1"
  title       String
  description String?
  type        TaskType @default(FEATURE)
  priority    Priority @default(MEDIUM)
  status      Status   @default(TODO)

  // Assignment
  assignedTo String?
  remarks    String?

  // Dates
  startDate DateTime?
  endDate   DateTime?

  // Parent-child relation for subtasks
  parentId String?
  parent   Task?   @relation("Subtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks Task[]  @relation("Subtasks")

  // Relations
  moduleId String
  module   Module    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  comments Comment[]

  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Auditing
  createdBy   String? // Clerk User ID
  creatorName String?

  reporterId   String? // Clerk User ID (Reporter)
  reporterName String?

  history TaskHistory[]
}

model TaskHistory {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  actorId   String // Who made the change (Clerk User ID)
  actorName String
  field     String // e.g., "status", "assignee", "priority"
  oldValue  String?
  newValue  String?
  createdAt DateTime @default(now())
}

model BugSheet {
  id          String   @id @default(cuid())
  module      String
  description String
  status      Status   @default(TODO)
  priority    Priority @default(MEDIUM)
  assignedTo  String?
  remarks     String?

  appId String
  app   App    @relation(fields: [appId], references: [id], onDelete: Cascade)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  Comment[]

  // Auditing
  createdBy   String?
  creatorName String?
}

enum TaskType {
  FEATURE
  BUG
  IMPROVEMENT
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Status {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

// ============= COMMENTS =============

model Comment {
  id         String @id @default(cuid())
  content    String
  authorId   String // Clerk User ID
  authorName String

  // Polymorphic relation - Task OR BugSheet
  taskId     String?
  task       Task?     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  bugSheetId String?
  bugSheet   BugSheet? @relation(fields: [bugSheetId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

// ============= ACTIVITY LOG =============

model ActivityLog {
  id String @id @default(cuid())

  // What happened
  action   ActivityAction
  field    String? // Field that was changed (e.g., "status", "assignee")
  oldValue String? // Previous value
  newValue String? // New value

  // Who did it
  userId   String // Clerk User ID
  userName String // User display name

  // What entity was affected
  entityType  EntityType
  entityId    String // Task ID or BugSheet ID
  entityTitle String // Task/Bug title for display

  // Context
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([entityType, entityId])
  @@index([userId])
}

enum ActivityAction {
  CREATED
  UPDATED
  DELETED
  STATUS_CHANGED
  ASSIGNED
  UNASSIGNED
  COMMENTED
  PRIORITY_CHANGED
}

enum EntityType {
  TASK
  BUGSHEET
  PROJECT
  MODULE
}

// ============= USER VISITS =============

model UserVisit {
  id     String @id @default(cuid())
  userId String // Clerk User ID

  // What was visited
  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectName String // Denormalized for quick display
  appId       String?
  appName     String? // Denormalized for quick display
  viewType    String? // 'list', 'board', 'summary', 'bugsheet'

  visitedAt DateTime @default(now())

  @@index([userId, visitedAt])
  @@index([projectId])
}

// ============= USER STARRED =============

model UserStarred {
  id     String @id @default(cuid())
  userId String // Clerk User ID

  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectName String // Denormalized
  appId       String?
  appName     String? // Denormalized

  createdAt DateTime @default(now())

  @@unique([userId, projectId, appId])
  @@index([userId])
}

// ============= NOTIFICATIONS =============

enum NotificationType {
  MENTION
  ASSIGNMENT
  STATUS_CHANGE
  COMMENT
}

model Notification {
  id      String           @id @default(cuid())
  userId  String // Recipient Clerk User ID
  type    NotificationType
  title   String
  message String
  read    Boolean          @default(false)

  // Context
  projectId String?
  taskId    String?
  commentId String?
  actorId   String // Who triggered the notification
  actorName String

  createdAt DateTime @default(now())

  @@index([userId, read])
  @@index([userId, createdAt])
}
