// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  moduleFormat    = "cjs" // Required for NestJS (CommonJS)
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============= USERS =============

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  avatarUrl     String?
  emailVerified    Boolean   @default(false)
  verifyToken      String?
  resetToken       String?
  resetTokenExpiry DateTime?
  refreshToken     String?   // Hashed refresh token
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  ownedProjects      Project[]       @relation("ProjectOwner")
  projectMemberships ProjectMember[]
}

// ============= ROLES =============

enum Role {
  ADMIN
  MEMBER
  VIEWER
}

// ============= PROJECTS =============

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  ownerId     String
  owner       User     @relation("ProjectOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  apps         App[]
  members      ProjectMember[]
  activityLogs ActivityLog[]
  userVisits   UserVisit[]
  userStarred  UserStarred[]
}

model ProjectMember {
  id        String   @id @default(cuid())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  role      Role     @default(MEMBER)
  createdAt DateTime @default(now())

  @@unique([projectId, userId])
}

// ============= APPS =============

model App {
  id        String   @id @default(cuid())
  name      String
  type      AppType
  icon      String? // Custom icon name
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   String?
  creatorName String?

  modules   Module[]
}

enum AppType {
  WEBSITE
  MOBILE
  API
  BUG_TRACKING
  CUSTOM
}

// ============= MODULES/PAGES =============

model Module {
  id          String   @id @default(cuid())
  name        String
  appId       String
  app         App      @relation(fields: [appId], references: [id], onDelete: Cascade)
  order       Int      @default(0)
  taskCounter Int      @default(0) // Tracks the next task number for generating taskCodes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tasks       Task[]
}

// ============= TASKS =============

model Task {
  id          String   @id @default(cuid())
  taskCode    String? // Persistent task code like "HOM-1" or "HOM-1.1"
  title       String
  description String?
  type        TaskType @default(FEATURE)
  priority    Priority @default(MEDIUM)
  status      Status   @default(TODO)

  // Assignment
  assignedTo String?
  remarks    String?

  // Dates
  startDate DateTime?
  endDate   DateTime?

  // Parent-child relation for subtasks
  parentId String?
  parent   Task?   @relation("Subtasks", fields: [parentId], references: [id], onDelete: Cascade)
  subtasks Task[]  @relation("Subtasks")

  // Relations
  moduleId String
  module   Module      @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  comments Comment[]
  labels   TaskLabel[]

  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Auditing
  createdBy   String? // User ID
  creatorName String?

  reporterId   String? // User ID (Reporter)
  reporterName String?

  history TaskHistory[]
}

// ============= LABELS =============

model Label {
  id        String      @id @default(cuid())
  name      String
  color     String      @default("#6366f1") // Default indigo color
  projectId String
  tasks     TaskLabel[]
  createdAt DateTime    @default(now())

  @@unique([projectId, name])
  @@index([projectId])
}

model TaskLabel {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  labelId   String
  label     Label    @relation(fields: [labelId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([taskId, labelId])
}

model TaskHistory {
  id        String   @id @default(cuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  actorId   String // Who made the change (User ID)
  actorName String
  field     String // e.g., "status", "assignee", "priority"
  oldValue  String?
  newValue  String?
  createdAt DateTime @default(now())
}

// BugSheet model removed - bugs are now tracked as Tasks with type: BUG

enum TaskType {
  FEATURE
  BUG
  IMPROVEMENT
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum Status {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

// ============= COMMENTS =============

model Comment {
  id         String @id @default(cuid())
  content    String
  authorId   String // User ID
  authorName String

  // Relation to Task only (BugSheet merged into Task)
  taskId    String?
  task      Task?    @relation(fields: [taskId], references: [id], onDelete: Cascade)

  // Threading
  parentId   String?
  parent     Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies    Comment[] @relation("CommentReplies")

  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([parentId])
}

// ============= ACTIVITY LOG =============

model ActivityLog {
  id String @id @default(cuid())

  // What happened
  action   ActivityAction
  field    String? // Field that was changed (e.g., "status", "assignee")
  oldValue String? // Previous value
  newValue String? // New value

  // Who did it
  userId   String // User ID
  userName String // User display name

  // What entity was affected
  entityType  EntityType
  entityId    String // Task ID or BugSheet ID
  entityTitle String // Task/Bug title for display

  // Context
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([projectId, createdAt])
  @@index([entityType, entityId])
  @@index([userId])
}

enum ActivityAction {
  CREATED
  UPDATED
  DELETED
  STATUS_CHANGED
  ASSIGNED
  UNASSIGNED
  COMMENTED
  PRIORITY_CHANGED
}

enum EntityType {
  TASK
  PROJECT
  MODULE
}

// ============= USER VISITS =============

model UserVisit {
  id     String @id @default(cuid())
  userId String // User ID

  // What was visited
  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectName String // Denormalized for quick display
  appId       String?
  appName     String? // Denormalized for quick display
  viewType    String? // 'list', 'board', 'summary', 'bugsheet'

  visitedAt DateTime @default(now())

  @@index([userId, visitedAt])
  @@index([projectId])
}

// ============= USER STARRED =============

model UserStarred {
  id     String @id @default(cuid())
  userId String // User ID

  projectId   String
  project     Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectName String // Denormalized
  appId       String?
  appName     String? // Denormalized

  createdAt DateTime @default(now())

  @@unique([userId, projectId, appId])
  @@index([userId])
}

// ============= NOTIFICATIONS =============

enum NotificationType {
  MENTION
  ASSIGNMENT
  STATUS_CHANGE
  COMMENT
}

model Notification {
  id      String           @id @default(cuid())
  userId  String // Recipient User ID
  type    NotificationType
  title   String
  message String
  read    Boolean          @default(false)

  // Context
  projectId String?
  taskId    String?
  commentId String?
  actorId   String // Who triggered the notification
  actorName String

  createdAt DateTime @default(now())

  @@index([userId, read])
  @@index([userId, createdAt])
}
